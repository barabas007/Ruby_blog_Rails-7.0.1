<h1 class="mb-4">Questions</h1>

<%= link_to 'New question', new_question_path, class: 'btn btn-outline-success' %>

<% @questions.each do |question| %>
  <article class="card mt-3">
    <div class="card-body">
      <h2><%= question.title %></h2>

        <section class="card-text">
          <time datetime="<%= question.formatted_created_at %>">
            <small><%= question.formatted_created_at %></small>
          </time>

          <p class="my-2">
            <%= question.body %>
          </p>
        </section>

      <table>
        <tr>
          <td><%= link_to 'Show', question_path(question), class: 'btn btn-outline-primary' %></td>
          <td><%= link_to 'Edit', edit_question_path(question), class: 'btn btn-outline-secondary' %></td>
          <td><%= button_to 'Destroy', question_path(question), class: 'btn btn-outline-danger',
                            method: :delete, data: { confirm: 'Are you sure?'} %></td>
        </tr>
      </table>
    </div>
  </article>
<% end %>